<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:background="#212121"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/movie_main_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影名"
                android:id="@+id/title"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_alignTop="@+id/title"
                android:layout_toEndOf="@+id/title"
                android:layout_marginRight="5dp"
                android:id="@+id/gang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年份"
                android:id="@+id/year"
                android:layout_alignTop="@+id/gang"
                android:layout_toEndOf="@+id/gang"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分:"
                android:id="@+id/rating"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/average" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Shawshank Redemption"
                android:id="@+id/original_title"
                android:layout_below="@+id/title"
                android:layout_alignStart="@+id/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.4"
                android:id="@+id/average"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_margin="5dp"
            android:background="#333934"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/image"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="演员表:"
                android:id="@+id/yanyuanbiao"
                android:layout_alignTop="@+id/image"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="XXX"
                android:id="@+id/casts"
                android:layout_below="@+id/yanyuanbiao"
                android:layout_alignStart="@+id/yanyuanbiao"
                android:layout_alignBottom="@+id/image"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="犯罪、惊悚"
                android:id="@+id/genres"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/yanyuanbiao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="导演:"
                android:id="@+id/daoyan"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/genres" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="xxx"
                android:id="@+id/name"
                android:layout_alignTop="@+id/daoyan"
                android:layout_toEndOf="@+id/daoyan" />
        </RelativeLayout>
        <View
            android:layout_margin="5dp"
            android:background="#9caf9f"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>